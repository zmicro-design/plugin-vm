export PLUGIN_VM_NAME=vm

export PLUGIN_VM_DATA=$(plugin::get_app_data_path $PLUGIN_VM_NAME)
export PLUGIN_VM_LOGS=$(plugin::get_app_logs_path $PLUGIN_VM_NAME)
export PLUGIN_VM_CONFIG=$(plugin::get_app_configs_path $PLUGIN_VM_NAME)/config

export PLUGIN_VM_VERSIONS=${PLUGIN_VM_DATA}/versions
export PLUGIN_VM_VERSION_CURRENT=${PLUGIN_VM_DATA}/current

export PLUGIN_VM_GO_DEFAULT_VERSION=v1.18
export PLIGIN_VM_GO_LTS_VERSION=v1.18
export PLUGIN_VM_GO_HOME=/usr/local/go
export PLUGIN_VM_GO_BIN=$PLUGIN_VM_GO_HOME/bin
export PLUGIN_VM_GO_PATH=$HOME/.go
export PLUGIN_VM_GO_DOWNLOAD_TMP=/tmp/go.tar.gz
export PLUGIN_VM_GO_SOURCE_GOOGLE=https://golang.google.cn/dl
export PLUGIN_VM_GO_SOURCE_QINIU=https://gomirrors.org/dl/go

if [ ! -d "$PLUGIN_VM_VERSIONS" ]; then
  mkdir -p $PLUGIN_VM_VERSIONS
fi

if [ ! -f "$PLUGIN_VM_VERSION_CURRENT" ]; then
  touch $PLUGIN_VM_VERSION_CURRENT
fi

if [ ! -d "$PLUGIN_VM_GO_PATH" ]; then
  mkdir -p $PLUGIN_VM_GO_PATH
fi
